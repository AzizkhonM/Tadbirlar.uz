<div class="main" style="height: auto; width: 100%; padding-top: 50px; padding-bottom: 50px; text-align:center">
    <h1 class="mainTitle"><b>Eng so ªnggi master-klasslar va</b></h1>
    <h1 class="mainTitle"><b>tadbirlar bizning saytda</b></h1>
</div>

<div class="container" style="margin-top: 30px; margin-bottom:80px; border: 1px solid rgb(197, 197, 197); padding-top: 20px; padding-bottom: 20px; padding-right: 20px; padding-left: 20px; border-radius: 15px">
    <div class="row">
        <div class="col-3" style="display: flex; justify-content:center;border-right:2px solid black">
            <i class="fa fa-calendar" style="color:dodgerblue; margin-right: 15px; font-size:150%; margin-top:3px"></i><input type="date">
        </div>
    </div>
</div>

<div class="container" style="margin-bottom: 100px;">
    <h3 style="margin-left: 10px;"><b>Oxirgi e'lonlar</b></h3>
    <div class="row" style="display: flex; justify-content:center">
        {{#if ads.length}}
        {{#each ads}}
            <div id="ads" style="border: 1px solid rgb(229, 229, 229); margin: 10px; width:350px">
                <div class="row">
                    <div class="col-12" style="height: 350px ; align-items: center; display: flex; justify-content:center">
                        <img src="{{upload_image}}" style="margin: auto;" width="349px" alt="">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12" style="margin: 25px;"><b style="font-size: 180%;">{{title}}</b></div>
                </div>
                <div class="row">
                    <div class="col-5" style="margin-left: 25px; margin-bottom:25px"><i class="fa fa-user" style="margin-right: 5px; color:dodgerblue"></i>{{fish}}</div>
                    <div class="col-5" style="margin-right: 25px; margin-bottom:25px"><i class="fa fa-tasks" style="margin-right: 5px; color:dodgerblue"></i>{{subcategory}}</div>
                </div>
                <div class="row">
                    <div class="col-5" style="margin-left: 25px; margin-bottom:25px"><i class="fa fa-calendar" style="margin-right: 5px; color:dodgerblue"></i>{{date}}</div>
                    <div class="col-5" style="margin-right: 25px; margin-bottom:25px"><i class="fa fa-clock-o" style="margin-right: 5px; color:dodgerblue"></i>{{time}}</div>
                </div>
                <div class="row" style="margin-bottom:25px">
                    <div class="col-12" style="text-align:center;"><i class="fa fa-wifi" style="margin-right: 5px; color:dodgerblue"></i>{{type}}</div>
                </div>
            </div>
        {{/each}}
        {{/if}}
    </div>
</div>



<style>
    .main {
        background-image: repeating-linear-gradient(to right, rgb(2, 117, 216), rgb(37, 93, 222), rgb(2, 117, 216));
    }

    .mainTitle {
        color: white;
        font-size: 400%;
    }

    #ads:hover{
        background-color: rgb(250, 250, 255);
    }
</style>